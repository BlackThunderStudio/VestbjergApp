<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import org.controlsfx.control.CheckComboBox?>
<AnchorPane fx:controller="com.teamSuperior.guiApp.controller.EmployeeManagementController" prefHeight="620.0"
            prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml">
    <AnchorPane prefHeight="50.0" prefWidth="1000.0">
        <JFXButton fx:id="clearSearchButton" layoutX="14.0" layoutY="13.0" mnemonicParsing="false"
                   onAction="#clickClearSearch" prefHeight="25.0" prefWidth="25.0" ripplerFill="#f92d26"
                   style="-fx-background-color: #c9c9c9;" text="X"/>
        <JFXTextField fx:id="searchQueryField" focusColor="#385ba4" layoutX="49.0" layoutY="13.0"
                      onKeyReleased="#handleSearchQuery" prefHeight="25.0" prefWidth="779.0"
                      promptText="Search..."/>
        <CheckComboBox fx:id="searchCriteriaComboBox" layoutX="838.0" layoutY="13.0" prefHeight="25"
                       prefWidth="150.0"/>
    </AnchorPane>
    <TableView fx:id="employeesTableView" layoutY="50.0" onMouseClicked="#clickEmployeesTableView"
               prefHeight="400.0" prefWidth="1000.0">
        <columns>
            <TableColumn fx:id="nameColumn" minWidth="90.0" text="Name"/>
            <TableColumn fx:id="surnameColumn" minWidth="90.0" text="Surname"/>
            <TableColumn fx:id="emailColumn" minWidth="150.0" text="Email"/>
            <TableColumn fx:id="positionColumn" minWidth="90.0" text="Position"/>
            <TableColumn fx:id="numOfSalesColumn" minWidth="80.0" text="Number of sales"/>
            <TableColumn fx:id="totalRevenueColumn" minWidth="80.0" text="Total revenue"/>
            <TableColumn fx:id="accessLevelColumn" minWidth="80.0" text="Access level"/>
            <TableColumn fx:id="addressColumn" minWidth="120.0" text="Address"/>
            <TableColumn fx:id="cityColumn" minWidth="100.0" text="City"/>
            <TableColumn fx:id="zipColumn" minWidth="80.0" text="ZIP code"/>
        </columns>
    </TableView>
    <AnchorPane layoutY="450.0" prefHeight="197.0" prefWidth="1000.0">
        <JFXTextField fx:id="nameField" focusColor="#385ba4" layoutX="138.0" layoutY="15.0" prefHeight="25.0"
                      prefWidth="200.0" promptText="Name"/>
        <JFXTextField fx:id="surnameField" focusColor="#385ba4" layoutX="138.0" layoutY="55.0" prefHeight="25.0"
                      prefWidth="200.0" promptText="Surname"/>
        <JFXTextField fx:id="emailField" focusColor="#385ba4" layoutX="138.0" layoutY="95.0" prefHeight="25.0"
                      prefWidth="200.0" promptText="Email"/>
        <Label layoutX="354.0" layoutY="22.0" text="- Name"/>
        <Label layoutX="354.0" layoutY="62.0" text="- Surname"/>
        <Label layoutX="354.0" layoutY="102.0" text="- Email"/>
        <Label layoutX="354.0" layoutY="142.0" text="- Position"/>
        <JFXTextField fx:id="addressField" focusColor="#385ba4" layoutX="588.0" layoutY="15.0" prefHeight="25.0"
                      prefWidth="200.0" promptText="Address"/>
        <JFXTextField fx:id="cityField" focusColor="#385ba4" layoutX="588.0" layoutY="55.0" prefHeight="25.0"
                      prefWidth="200.0" promptText="City"/>
        <JFXTextField fx:id="zipField" focusColor="#385ba4" layoutX="588.0" layoutY="95.0" prefHeight="25.0"
                      prefWidth="200.0" promptText="ZIP code"/>
        <Label layoutX="804.0" layoutY="22.0" text=" - Address"/>
        <Label layoutX="804.0" layoutY="62.0" text=" - City"/>
        <Label layoutX="804.0" layoutY="102.0" text=" - ZIP code"/>
        <JFXButton fx:id="saveButton" layoutX="588.0" layoutY="157.0" mnemonicParsing="false" onAction="#clickSave"
                   style="-fx-background-color: #c9c9c9;" text="Save"/>
        <JFXButton fx:id="saveQuitButton" layoutX="650.0" layoutY="157.0" mnemonicParsing="false"
                   onAction="#clickSaveQuit" style="-fx-background-color: #c9c9c9;" text="Save &amp; Quit"/>
        <JFXButton fx:id="quitButton" layoutX="751.0" layoutY="157.0" mnemonicParsing="false" onAction="#clickQuit"
                   style="-fx-background-color: #c9c9c9;" text="Quit"/>
        <JFXButton fx:id="deleteButton" layoutX="811.0" layoutY="157.0" mnemonicParsing="false"
                   onAction="#clickDelete" ripplerFill="#f92d26" style="-fx-background-color: #c9c9c9;"
                   text="Delete"/>
        <JFXComboBox fx:id="positionComboBox" layoutX="138.0" layoutY="135.0" prefHeight="25.0" prefWidth="200.0"/>
    </AnchorPane>
</AnchorPane>
