<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import org.controlsfx.control.CheckComboBox?>
<AnchorPane prefHeight="850.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.teamSuperior.guiApp.controller.EmployeeStatisticsController">
   <children>
       <AnchorPane prefHeight="50.0" prefWidth="1000.0">
           <children>
               <Button fx:id="btn_search_clear" layoutX="14.0" layoutY="13.0" mnemonicParsing="false"
                       onAction="#btn_search_clear_onClick" prefHeight="25.0" prefWidth="25.0" text="X"/>
               <TextField fx:id="text_search_query" layoutX="49.0" layoutY="13.0"
                          onKeyReleased="#text_search_query_onKeyReleased" prefHeight="25.0" prefWidth="779.0"
                          promptText="Search..."/>
               <CheckComboBox fx:id="checkComboBox_search_criteria" layoutX="838.0" layoutY="13.0" prefHeight="25"
                              prefWidth="150.0"/>
           </children>
       </AnchorPane>
       <TableView fx:id="tableView_employees" layoutY="50" onMouseClicked="#tableView_employees_onMouseClicked"
                  prefHeight="200.0" prefWidth="1000.0">
      </TableView>
       <ScrollPane layoutY="250.0" prefHeight="600.0" prefWidth="1000.0">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="900.0" prefWidth="1000.0">
               <children>
                  <BarChart fx:id="chart_numberOfSales" prefHeight="400.0" prefWidth="330.0" title="Number of sales">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </BarChart>
                  <BarChart fx:id="chart_revenue" layoutX="330.0" prefHeight="400.0" prefWidth="330.0" title="Revenue">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </BarChart>
                   <BarChart fx:id="chart_efficiency" layoutX="660.0" prefHeight="400.0" prefWidth="330.0" title="Efficiency">
                       <xAxis>
                           <CategoryAxis side="BOTTOM" />
                       </xAxis>
                       <yAxis>
                           <NumberAxis side="LEFT" />
                       </yAxis>
                   </BarChart>
                  <Label fx:id="label_productivity" layoutX="415.0" layoutY="415.0" text="Label" />
                  <PieChart fx:id="chart_contribution" layoutX="0.0" layoutY="400.0" prefHeight="400.0" title="Contribution to the revenue" />
                  <Label fx:id="label_efficiency" layoutX="415.0" layoutY="430.0" text="Label" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </children>
</AnchorPane>
