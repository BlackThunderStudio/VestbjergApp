<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Hyperlink?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1000.0" stylesheets="/style/mainWindow.css" xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamSuperior.guiApp.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" onAction="#handleSettings" text="Settings"/>
                <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Connection">
                <MenuItem mnemonicParsing="false" onAction="#handleConnect" text="Connect"/>
                <MenuItem mnemonicParsing="false" onAction="#handleLogIn" text="Log in"/>
                <MenuItem mnemonicParsing="false" onAction="#handleLogOut" text="Log out"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Transactions">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleNewTransaction" text="New"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleViewTransactions" text="View"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Products">
                <MenuItem mnemonicParsing="false" onAction="#handleProductsView" text="View"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#handleAddOffer" text="Add Offer"/>
                <MenuItem mnemonicParsing="false" onAction="#handleViewOffers" text="View Offers"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Employees">
                <MenuItem mnemonicParsing="false" onAction="#handleEmployeesAdd" text="Add"/>
                <MenuItem mnemonicParsing="false" onAction="#handleEmployeesStatistics" text="Statistics"/>
                <MenuItem mnemonicParsing="false" onAction="#handleEmployeesEdit" text="Edit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Contractors">
                <MenuItem mnemonicParsing="false" onAction="#handleContractorsAdd" text="Add"/>
                <MenuItem mnemonicParsing="false" onAction="#handleContractorsManage" text="Manage"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Customers">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleCustomers" text="Edit"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <AnchorPane styleClass="backgroundGray" BorderPane.alignment="CENTER">
            <Label styleClass="heading2" layoutX="25.0" layoutY="25.0" text="Welcome"/>
            <Label styleClass="loggedEmployee" layoutX="60.0" layoutY="85.0" text="${controller.welcomeMessage}"/>
            <Label layoutX="830.0" layoutY="15.0" styleClass="current-time" text="${controller.currentTime}"/>
            <Label layoutX="845.0" layoutY="95.0" styleClass="current-date" text="${controller.currentDate}"/>
            <children>
                <AreaChart fx:id="efficiency" layoutX="25.0" layoutY="145.0" prefHeight="300.0" prefWidth="950.0">
                    <xAxis>
                        <NumberAxis side="BOTTOM" fx:id="xAxis" styleClass="blk"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="RIGHT" fx:id="yAxis" styleClass="blk"/>
                    </yAxis>
                </AreaChart>
            </children>
            <LineChart fx:id="currency_eurChart" layoutX="25.0" layoutY="460.0" prefWidth="500.0" prefHeight="190.0"
                       legendVisible="true">
                <xAxis>
                    <NumberAxis side="BOTTOM" fx:id="xAxisCurrencyEur" tickMarkVisible="false"
                                tickLabelsVisible="false"></NumberAxis>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" fx:id="yAxisCurrencyEur"></NumberAxis>
                </yAxis>
            </LineChart>
            <Hyperlink fx:id="button_copyEur" text="Copy" onAction="#handleCopyEur" visible="false" layoutX="520.0" layoutY="532.0"></Hyperlink>
            <Hyperlink fx:id="button_copyUsd" text="Copy" onAction="#handleCopyUsd" layoutX="520.0" layoutY="580.0" visible="false"></Hyperlink>
            <PieChart fx:id="sales_chart" layoutX="520.0" layoutY="450.0" prefHeight="200.0" pickOnBounds="true"/>
        </AnchorPane>
    </center>
    <bottom>
        <AnchorPane prefHeight="60.0" prefWidth="809.0" BorderPane.alignment="CENTER" styleClass="bottom">
            <ImageView pickOnBounds="true" preserveRatio="true" styleClass="logo">
                <Image url="/silvan_logo_scaled.png" preserveRatio="true"/>
            </ImageView>
            <Button fx:id="btn_logIn" layoutX="911.0" layoutY="39.0" mnemonicParsing="false" onAction="#handleLogIn"
                    text="Log In"/>


        </AnchorPane>
    </bottom>
</BorderPane>
